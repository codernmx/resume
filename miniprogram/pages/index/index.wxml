<view class="page">
	<view class="card top-30">
		<!-- <view class="title">教育经历</view>
		<van-divider />
		<view class="top-30 flex between">
			<view>重庆工程学院</view>
			<view>数字媒体技术</view>
			<view>全日制本科</view>
			<view>2017-2021</view>
		</view> -->
		<view class="nickName">刘常灵
			<van-tag color="#53cac3">{{userInfo.workingYears}}</van-tag>
		</view>
		<view class="content text-center age">
			{{userInfo.sex}} / {{userInfo.age}} / {{userInfo.politics}}
		</view>
	</view>
	<view class="card top-30 content">
		<van-skeleton title row="3" wx:if="{{!userInfo}}" />
		<block wx:else="{{userInfo}}">
			<view class="title">个人优势</view>
			<van-divider />
			<view class="top-30" style="text-indent: 20rpx;">
				{{userInfo.advantage}}
			</view>
		</block>

	</view>

	<view class="card top-30 content">
		<van-skeleton title row="3" wx:if="{{!userInfo}}" />
		<block wx:else="{{userInfo}}">
			<view class="title">基本信息</view>
			<van-divider />
			<view class="top-30 flex between">
				<view>学历</view>
				<view>{{userInfo.degree}}</view>
			</view>
			<view class="top-30 flex between">
				<view>居住地</view>
				<view>{{userInfo.address}}</view>
			</view>
			<view class="top-30 flex between">
				<view>籍贯</view>
				<view>{{userInfo.native}}</view>
			</view>
			<view class="top-30 flex between">
				<view>工作年限</view>
				<view>{{userInfo.workingYears}}</view>
			</view>
			<view class="top-30 flex between">
				<view>岗位意向</view>
				<view>{{userInfo.job}}</view>
			</view>

		</block>

	</view>

	<view class="card top-30 content">
		<van-skeleton title row="3" wx:if="{{!userInfo}}" />
		<block wx:else="{{userInfo}}">
			<view class="title">教育经历</view>
			<van-divider />
			<view class="top-30 flex between" wx:for="{{userInfo.education}}">
				<view>{{item.school}}</view>
				<view>{{item.major}}</view>
				<view>{{item.degree}}</view>
				<view>{{item.startDate}}-{{item.endDate}}</view>
			</view>
		</block>
	</view>
	<view class="card top-30">
		<van-skeleton title row="3" wx:if="{{!userInfo}}" />
		<block wx:else="{{userInfo}}">
			<view class="title">技能标签</view>
			<van-divider />
			<view class="top-30" style="display:flex;flex-wrap:wrap;justify-content: start;">
				<van-tag style="margin:0 5rpx 20rpx 0" type="{{item.type}}" text-color="#fff" wx:for="{{userInfo.skill}}" wx:key="index">{{item.name}}</van-tag>
			</view>
		</block>

	</view>
	<view style="height: 120rpx;"></view>
</view>